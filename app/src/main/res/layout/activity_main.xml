<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Hello World!"
        android:layout_weight="1"
        android:onClick="onChangeOne"/>

    <FrameLayout
        android:id="@+id/fragment_container_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Hello World!"
        android:layout_weight="1"
        android:onClick="onChangeTwo"/>

    <FrameLayout
        android:id="@+id/fragment_container_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Hello World!"
        android:layout_weight="1"
        android:onClick="onChangeThree"/>

    <FrameLayout
        android:id="@+id/fragment_container_4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Hello World!"
        android:layout_weight="1"
        android:onClick="onChangeFour">
        <TextView
            android:id="@+id/left_bottom_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffeb3b"
            android:gravity="center"
            android:text="view_animation"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/left_bottom_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#259b24"
            android:gravity="center"
            android:text="view_animation"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#ffffff"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fragment_container_5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Hello World!"
        android:onClick="onCHangeFif"
        android:layout_weight="1">
        <TextView
            android:id="@+id/right_bottom_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3f51b5"
            android:gravity="center"
            android:text="view_animator"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/right_bottom_0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e91e63"
            android:gravity="center"
            android:text="view_animator"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#ffffff"/>
    </FrameLayout>

</LinearLayout>